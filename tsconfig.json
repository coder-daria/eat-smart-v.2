{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "target": "es6",
  },
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src"
    ]
  },
  "exclude": ["node_modules", "dist", "coverage", "**/*.spec.ts"]
}
